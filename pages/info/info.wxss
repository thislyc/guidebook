/* pages/info/info.wxss */
.info {
  background-color: #fff;
  line-height: 40rpx;
  border-radius: 0rpx 0rpx 32rpx 32rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0);
  padding: 32rpx;
  border-radius: 0rpx 0rpx 32rpx 32rpx;
}

.info-left {
  color: rgba(41, 41, 48, 1);
  font-size: 32rpx;
  text-align: left;
  font-weight: bold;
  font-family: PingFangSC-bold;
}

.info-right {
  width: 180rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.second-left {}

.view {
  width: 26rpx;
  height: 18rpx;
  margin-right: 8rpx;
}

.foot {
  background-color: #fff;
  margin: 16rpx auto 0rpx auto;
  line-height: 40rpx;
  border-radius: 32rpx 32rpx 0rpx 0rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  border: 2rpx solid rgba(255, 255, 255, 0);
  padding: 32rpx
}

.second-right {
  height: 28rpx;
  color: rgba(120, 120, 130, 1);
  font-size: 20rpx;
  text-align: right;
  font-family: PingFangSC-regular;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.second {
  margin: 20rpx 0rpx;
}

.label {
  padding: 0 8rpx;
  margin-bottom: 10rpx;
  height: 38rpx;
  border-radius: 4rpx;
  background-color: rgba(253, 214, 25, 1);
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0);
  align-items: center;
  display: flex;
}

.info-icon {
  height: 24rpx;
  width: 24rpx;
  margin-right: 14rpx;
}

.info-center {
  flex-wrap: wrap;
  width: 50%;
  color: rgba(41, 41, 48, 1);
  font-size: 24rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  display: flex;
  align-items: center;
  justify-content: flex-start;

  word-break: break-all;
  word-wrap: break-word;
}

.down {
  width: 120rpx;
  height: 48rpx;
  line-height: 40prx;
  border-radius: 28rpx;
  text-align: center;
}

.share {
  width: 28rpx;
  height: 28rpx;
}

.num {
  z-index: 10;
  top: 700rpx;
  position: absolute;
  right: 20rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 20rpx;
  text-align: center;
  font-family: PingFangSC-regular;
  width: 52rpx;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 8rpx;
  background-color: rgba(0, 0, 0, 0.52);
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0);

}