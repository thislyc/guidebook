/**index.wxss**/
.location-text {
  color: rgba(41, 41, 48, 1);
  font-size: 14px;
  text-align: left;
  font-family: PingFangSC-regular;
}

.first {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 10rpx;
  padding-top: 10rpx;
}

.second {
  display: flex;
  align-items: center;
  padding: 0rpx 10rpx;
  padding-top: 10rpx;
  padding-bottom: 34rpx;

}

.nav .cu-item {
  height: 50rpx;
  display: inline-block;
  line-height: 50rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  color: rgba(41, 41, 48, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: PingFangSC-bold;
}

.white-color {
  background-color: #FFFFFF;
  line-height: 40rpx;
  border-radius: 28rpx;
  text-align: center;
}

.list {
  margin-top: -20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cell {
  border: 2rpx solid rgba(255, 255, 255, 0);
  width: 100%;
  line-height: 40rpx;
  border-radius: 32rpx;
  text-align: center;
  background-color: #FFFFFF;
  padding: 24rpx 32rpx;
  margin-bottom: 32rpx;
}

.cell .first {
  width: 100%;
  height: 44rpx;
  color: rgba(41, 41, 48, 1);
  font-size: 30rpx;
  text-align: left;
  font-family: PingFangSC-bold;
  font-weight: bold;
}

.cell .second {
  margin-top: 28rpx;
  align-items: center;
  justify-content: space-between;
  height: 40rpx;
  color: rgba(77, 77, 86, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.cell .second .left {
  align-items: center;
  justify-content: space-between;
}

.cell .second .right {
  align-items: center;
  justify-content: center;
}

.cell .third {
  align-items: center;
  justify-content: space-between;
}

.pic {
  width: 222rpx;
  height: 166rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 0);
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  padding: 10rpx;
}

.num {
  color: rgba(255, 255, 255, 1);
  font-size: 20rpx;
  text-align: center;
  font-family: PingFangSC-regular;
  width: 52rpx;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 8rpx;
  background-color: rgba(0, 0, 0, 0.52);
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0);
}

.view {
  width: 26rpx;
  height: 18rpx;
  margin-right: 8rpx;
}

.line {
  width: 6rpx;
  height: 24rpx;
  margin: auto 16rpx;
}

page {
  background-color: #F3F3F3;
}

.tip {
  padding-top: 10rpx;
  margin-top: -20rpx;
  border-radius: 32rpx 32rpx 0rpx 0rpx;
  line-height: 26rpx;
  padding-bottom: 30rpx;
  background-color: #FFEB8C;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(41, 41, 48, 1);
  font-size: 26rpx;
  font-family: PingFangSC-regular;
}